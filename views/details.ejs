            <td><%= data.Country%></td>
            <td><%= myfuncs.emailCreation(data.Firstname, data.Lastname, data.Company)%></td>
            <td><%= data.Company%></td>
            <td bgcolor="<%= data.Color %>"><%= data.Color.toUpperCase()%></td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>

