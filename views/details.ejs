<%- include("partials/header") -%>

<div class="columns is-centered">
  <div class="column is-narrow">
    <div class="table-container">
      <h1 class="title has-text-centered">Üksikisiku andmed</h1>
      <table class="table is-striped">
        <thead>
          <tr>
            <th>Eesnimi</th>
            <th>Perenimi</th>
            <th>Sugu</th>
            <th class="text is-centered">Sünnipäev</th>
            <th>Päritolu riik</th>
            <th>e-post</th>
            <th>Ettevõte</th>
            <th>HEX-kood</th>
          </tr>
        </thead>
